<h2>Log in</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.email_field :email, placeholder: 'name@example.com', autofocus: true, autocomplete: "email" %>
  <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Input password' %>

  <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me %>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
