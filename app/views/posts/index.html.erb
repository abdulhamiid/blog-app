<header>
  <h1><%= @user.name %></h1>
  <hr/>
</header>

<section>
  <% @user.posts.each do |post| %>
    <article>
      <h2><%= post.title %></h2>
      <p><%= post.text %></p>
      <span>Comments: <%= post.comments_counter%>, Likes: <%= post.likes_counter %></span>
      <% post.comments.each do |comment| %>
        <p>Username: <%= comment.text %></p>
      <% end %>
    <hr/>
    </article>
  <% end %>
</section>
<br/>
<button>Pagination</button>
