<header>
  <img src="<%= @user.photo %>" alt="profile_img" width="50" height="50">
  <h1><%= @user.name %></h1>
  <hr/>
</header>

<section>
  <%= link_to "New Post", new_user_post_path %>
  <br/>
  <% @user.posts.each do |post| %>
    <article>
      <h2>
      <%= link_to link_to post.title, user_post_path(@user.id, post.id) %>
      </h2>
      <p><%= post.text %></p>
      <span>Comments: <%= post.comments_counter%>,</span>
      <span>Likes: <%= post.likes_counter %></span>
      <% post.five_recent_comments.each do |comment| %>
        <p>Username: <%= comment.text %></p>
      <% end %>
    <hr/>
    </article>
  <% end %>
</section>
<br/>

<button>Pagination</button>
