<div class="p-4 my-3 border border-1 col-12 ">
  <div class="d-flex justify-content-between">
    <p class="fw-bold">Post by <%= @post.author.name %></p>
    <div>
    <span>Comments: <%= @post.comments_counter%>,</span>
    <span>Likes: <%= @post.likes_counter %></span>
    </div>
  </div>
  <p><%= @post.text %><p>
</div>

<%= form_with url: user_post_likes_path(@post.author, @post), method: :post do |f| %>
  <%= f.submit 'Like post', class: "btn btn-dark mb-2" %>
<% end %>
<%= link_to "Destroy", user_post_path(@post.author, @post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
<% @post.comments.includes([:author]).each do |comment| %>
  <p><%= comment.author.name %>: <%=comment.text %></p>
<%end%>
<%= link_to 'Add a new comment', new_user_post_comment_url(@post.author, @post)  %>

